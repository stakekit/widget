{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "turbo:build": {
      "outputs": ["dist/**"]
    },
    "turbo:lint": {
      "inputs": ["src/**"]
    },
    "turbo:format": {
      "inputs": ["src/**"]
    },
    "turbo:test": {
      "inputs": ["src/**", "tests/**"]
    }
  }
}
